extends navbarlogin.pug

block title
   title Register
block navbarcontent
    .row
      .col-md-6.col-sm-12
        h3.h5 Login
        form(action='/register' method='post')
          .row
            .col-lg-8.col-md-12.col-sm-12.pb-2
              input.bg-light.form-control(type='text' name='username' placeholder='*Username' required='required')

          .row
            .col-lg-8.col-md-12.col-sm-12.pb-2
              input.bg-light.form-control(type='password' name='password' placeholder='*Password' required='required')
          .row
            .col-lg-8.col-md-12.col-sm-12.pb-2
              input.bg-light.form-control(type='password' name='confirmation' placeholder='*repeat Password' required='required')

          button.btn.btn-primary(type='submit') Register
          .row
            .col-lg-8.col-md-12.col-sm-12.pb-2
                p.slider-text-2
                  | Already have an Account?
                  br
                  a.link(href='login') Login
