extends navbarlogin.pug
block header
    title Login
block heading
 h2 Login
block content
        form(action="/login" method="post")
            div(class="form-group")
                label(for="inputUsername") Login
                input(type="text", class="form-control", id="inputUsername", placeholder="Nutzername", name="username")
            div(class="form-group")
                label(for="inputPassword") Password
                input(type="password", class="form-control", id="inputPassword" placeholder="Passwort", name="password")
            div(class="form-group")
                button(type="submit", class="btn btn-primary") Login
