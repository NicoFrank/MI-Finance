doctype html
html
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    title MI Finance
    link(rel='preconnect' href='https://fonts.gstatic.com' crossorigin='crossorigin')
    link(rel='preload' as='style' href='https://fonts.googleapis.com/css2?family=Oxygen:wght@300;400;700&display=swap')
    link(rel='stylesheet' href='https://fonts.googleapis.com/css2?family=Oxygen:wght@300;400;700&display=swap' media='print' onload="this.media='all'")
    noscript
      link(rel='stylesheet' href='https://fonts.googleapis.com/css2?family=Oxygen:wght@300;400;700&display=swap')
    link(href='http://localhost:3000/css/bootstrap.min.css?ver=1.2.0' rel='stylesheet')
    link(href='http://localhost:3000/css/main.css?ver=1.2.0' rel='stylesheet')

    noscript
      style.
        .tf-header {
        background: url('http://localhost:3000/images/1-hero-image.jpg') no-repeat center center;
        }
    header.tf-header(data-parallax='scroll' data-image-src='http://localhost:3000/images/1-hero-image.jpg')
      nav.navbar.py-5.navbar-dark
        .container
          h1
            a.navbar-brand(href='/') MI Finance
          #navbar
            ul.nav.pull-right
                block navbaritems

      .container
              if success
                  div(class="alert alert-success" role="alert") #{success}
              if error
                  div(class="alert alert-danger" role="alert") #{error}
              block navbarcontent

    block content

    footer.bg-dark.py-4.mt-5.tf-footer
      .container.text-light
        .row
          .col-md-6.col-sm-12 &copy; MI Finance. All rights reserved.
          .col-md-6.col-sm-12.text-right.tf-design
            | Design -
            a(href='https://templateflip.com' target='_blank') Templateflip
    script(src='http://localhost:3000/scripts/jquery.slim.min.js?ver=1.2.0')
    script(src='http://localhost:3000/scripts/bootstrap.bundle.min.js?ver=1.2.0')
    script(src='http://localhost:3000/scripts/parallax.min.js?ver=1.2.0')
    script(src='http://localhost:3000/scripts/main.js?ver=1.2.0')
